                              <path fill="#D8342E" d="M276.3,4.5h36l51,58.2V4.5h23.9v122.8h-23.9V98l-54.6-59.7v89.1h-23.9V26.6l-8.5-1.7V4.5z"/>
                              <path fill="#D8342E" d="M466.3,63l47.6,64.3h-29.2l-32.1-47.4l-30.4,47.4H394l45.7-65.2L396.9,4.5h29.3l27.6,41.3l27.6-41.3h28.1
                                      L466.3,63z"/>
                          </g>
                          <path fill="#1C1C1B" d="M722.9,2.8c-27.5,0-50.8,18-59,43c-5.2-2.2-10.6-3.5-16.3-3.6c-7.8-0.2-14.8,1.6-20.6,4.1
                              C618.7,21,595.4,2.8,567.6,2.8c-34.5,0-62.3,28.1-62.3,63.1c0,34.8,27.8,63.1,62.3,63.1c32.9,0,59.8-25.9,62.1-58.6
                              c4.2-2.6,10.5-5.7,17.2-5.5c4.9,0.1,9.4,1.9,13.9,5.4C663,103,689.9,129,722.9,129c34.5,0,62.3-28.3,62.3-63.1
                              C785.2,30.9,757.4,2.8,722.9,2.8z M567.6,106.8c-22.9,0-38.4-17.4-38.4-40.9s15.5-40.9,38.4-40.9S606,42.3,606,65.9
                              S590.5,106.8,567.6,106.8z M722.9,106.8c-22.9,0-38.4-17.4-38.4-40.9s15.5-40.9,38.4-40.9c22.9,0,38.4,17.4,38.4,40.9
                              S745.8,106.8,722.9,106.8z"/>
                      </svg>

                      <p>{{ subtitulo | safe }}</p>
                  </div>
            </header>

            <div class="project-content wrapper">
              {% for dia in programa %}
                <div class="project-schedule-day">
                  <h2>{{ dia.dia }}</h2>
                  
                  <ul>
                    {% for hora in dia.info %}
                    <li>
                      <time>{{ hora.hora }}</time>
                      <h3>{{ hora.titulo }}</h3>

                      {{ hora.info | md | safe }}

                      {% if hora.persoas %}
                      <ul>
                        {% for persoa in hora.persoas %}
                        <li>
                          {% if persoa.url %}
                          <a href="{{ persoa.url }}">{{ persoa.nome }}</a>
                          {% else %}
                          {{ persoa.nome}}
                          {% endif %}
                        </li>
                        {% endfor %}
                      </ul>
                      {% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endfor %}

              <footer class="project-footer">
                {{ info | md | safe }}

                <p>Organizou: <a href="http://dag.gal" title="Asociación galega de deseñadores">
                  <img src="./img/dag.svg" inline>
                  </a></p>
                <p>Colaborou: <a href="http://concelloderianxo.gal" title="Concello de Rianxo"><img src="./img/rianxo.svg" inline></a></p>
              </footer>
            </div>
          </article>

          {% if medios %}
					<aside class="project-news-external wrapper">
						<ul>
							{% for link in medios %}
							<li>
									<h3>
										<a href="{{ link.url }}">
											{{ link.titulo }}
										</a>
									</h3>
									<small>{{ link.medio }}</small>
								</a>
							</li>
							{% endfor %}
						</ul>
					</aside>
				{% endif %}

        <aside class="project-social-highlight">
          <div>
          <a data-flickr-embed='true' href='https://www.flickr.com/photos/asociaciondag/sets/72157654578390304' title='1EDAG by Asociación DAG, on Flickr'><img src='https://live.staticflickr.com/399/20344700346_7c81ac2780_b.jpg'></a><script async src='https://embedr.flickr.com/assets/client-code.js' charset='utf-8'></script>
          </div>
        </aside>
    </body>
</html>
